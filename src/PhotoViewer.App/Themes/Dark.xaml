<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Cyberpunk Color Palette -->
    <Color x:Key="WindowBackgroundColor">#FF0A0E27</Color>
    <Color x:Key="SurfaceBackgroundColor">#FF0F1419</Color>
    <Color x:Key="BorderColor">#FF1A2332</Color>
    <Color x:Key="PrimaryTextColor">#FFFFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#FF9BA7C0</Color>
    <Color x:Key="AccentColor">#FF00F0FF</Color>
    <Color x:Key="HoverColor">#FF1A2A3F</Color>
    <Color x:Key="PressedColor">#FF00D9F0</Color>
    <Color x:Key="SelectedColor">#FF0F1930</Color>
    <Color x:Key="SelectedBorderColor">#FF00F0FF</Color>
    <Color x:Key="ShadowColor">#FF00F0FF</Color>

    <!-- Cyberpunk Neon Colors -->
    <Color x:Key="NeonCyanColor">#FF00F0FF</Color>
    <Color x:Key="NeonMagentaColor">#FFFF00FF</Color>
    <Color x:Key="NeonPinkColor">#FFFF006E</Color>
    <Color x:Key="NeonPurpleColor">#FFBB00FF</Color>
    <Color x:Key="NeonYellowColor">#FFFFD700</Color>

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBackgroundBrush" Color="{StaticResource SurfaceBackgroundColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="PressedBrush" Color="{StaticResource PressedColor}"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="{StaticResource SelectedColor}"/>
    <SolidColorBrush x:Key="SelectedBorderBrush" Color="{StaticResource SelectedBorderColor}"/>

    <SolidColorBrush x:Key="NeonCyanBrush" Color="{StaticResource NeonCyanColor}"/>
    <SolidColorBrush x:Key="NeonMagentaBrush" Color="{StaticResource NeonMagentaColor}"/>
    <SolidColorBrush x:Key="NeonPinkBrush" Color="{StaticResource NeonPinkColor}"/>
    <SolidColorBrush x:Key="NeonPurpleBrush" Color="{StaticResource NeonPurpleColor}"/>
    <SolidColorBrush x:Key="NeonYellowBrush" Color="{StaticResource NeonYellowColor}"/>

    <!-- Button Brushes -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FF0F1419"/>
    <LinearGradientBrush x:Key="ButtonHoverBackgroundBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF1A2A3F" Offset="0"/>
        <GradientStop Color="#FF0F1930" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ButtonPressedBackgroundBrush" Color="#FF0A0E27"/>

    <!-- Cyberpunk Gradient Brushes -->
    <LinearGradientBrush x:Key="MainToolbarGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#00F0FF" Offset="0"/>
        <GradientStop Color="#BB00FF" Offset="0.5"/>
        <GradientStop Color="#FF006E" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="StatusToolbarBackgroundGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF0A0E27" Offset="0"/>
        <GradientStop Color="#FF0F1419" Offset="0.5"/>
        <GradientStop Color="#FF0A0E27" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="StatusToolbarBorderGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#00F0FF" Offset="0"/>
        <GradientStop Color="#FF006E" Offset="1"/>
    </LinearGradientBrush>

    <!-- Empty State Gradients -->
    <LinearGradientBrush x:Key="EmptyStateBorderGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#00F0FF" Offset="0"/>
        <GradientStop Color="#FF006E" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SelectionBackgroundGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#150F1930" Offset="0"/>
        <GradientStop Color="#300F1930" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
