<Window x:Class="PhotoViewer.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoViewer.App"
        mc:Ignorable="d"
        Title="LuminaView - 圖片瀏覽器"
        Height="768"
        Width="1280"
        WindowState="Maximized"
        Background="#FF2D2D30">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 頂部工具列 -->
        <Border Grid.Row="0" Background="#FF3E3E42" BorderBrush="#FF555555" BorderThickness="0,0,0,1" Padding="10,8">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="OpenFolderButton"
                        Content="📂 開啟檔案夾"
                        Padding="15,8"
                        Margin="0,0,10,0"
                        Click="OpenFolderButton_Click"
                        Style="{StaticResource ModernButtonStyle}"/>

                <TextBlock x:Name="FolderPathTextBlock"
                          Text="尚未選擇檔案夾"
                          VerticalAlignment="Center"
                          Foreground="#FFCCCCCC"
                          FontSize="13"
                          Margin="10,0"/>

                <TextBlock x:Name="ImageCountTextBlock"
                          Text=""
                          VerticalAlignment="Center"
                          Foreground="#FF999999"
                          FontSize="12"
                          Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- 主內容區域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左側檔案夾樹（未來實作） -->
            <Border Grid.Column="0" Background="#FF252526" BorderBrush="#FF555555" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="檔案夾樹"
                                  Foreground="#FFCCCCCC"
                                  FontSize="14"
                                  FontWeight="Bold"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="（待實作）"
                                  Foreground="#FF666666"
                                  FontSize="12"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- 分隔條 -->
            <GridSplitter Grid.Column="1"
                         Width="5"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Stretch"
                         Background="#FF3E3E42"
                         ShowsPreview="True"/>

            <!-- 右側圖片網格區域 -->
            <Border Grid.Column="2" Background="#FF1E1E1E">
                <Grid>
                    <!-- 圖片網格 -->
                    <ScrollViewer x:Name="ImageScrollViewer"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled"
                                 Background="Transparent">
                        <WrapPanel x:Name="ImageWrapPanel"
                                  Margin="10"
                                  Orientation="Horizontal"
                                  ItemWidth="160"
                                  ItemHeight="160"/>
                    </ScrollViewer>

                    <!-- 無圖片提示 -->
                    <StackPanel x:Name="EmptyStatePanel"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Visible">
                        <TextBlock Text="📷"
                                  FontSize="72"
                                  HorizontalAlignment="Center"
                                  Foreground="#FF555555"/>
                        <TextBlock Text="請點擊「開啟檔案夾」選擇包含圖片的檔案夾"
                                  FontSize="16"
                                  Foreground="#FF888888"
                                  HorizontalAlignment="Center"
                                  Margin="0,20,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- 底部狀態列 -->
        <Border Grid.Row="2" Background="#FF007ACC" BorderBrush="#FF555555" BorderThickness="0,1,0,0" Padding="10,6">
            <Grid>
                <TextBlock x:Name="StatusTextBlock"
                          Text="就緒"
                          VerticalAlignment="Center"
                          Foreground="White"
                          FontSize="12"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock x:Name="MemoryUsageTextBlock"
                              Text=""
                              VerticalAlignment="Center"
                              Foreground="White"
                              FontSize="11"
                              Margin="0,0,15,0"/>
                    <TextBlock Text="LuminaView v0.1.0"
                              VerticalAlignment="Center"
                              Foreground="White"
                              FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
